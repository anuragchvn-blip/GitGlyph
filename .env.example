# Environment Variables for GitGlyph

# Required for Arweave publishing
BUNDLR_PRIVATE_KEY=your_polygon_private_key_here

# Required for RainbowKit (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Required for NFT minting (set after deploying contract via Thirdweb)
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Optional: Custom RPC URLs
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-rpc.com
NEXT_PUBLIC_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com